{
  "meta": { "siteName": "Starter", "description": "Generic block-based starter." },
  "theme": { "name": "starter", "mode": "light" },
  "layout": {
    "pages": [
      {
        "slug": "about",
        "title": "About",
        "href": "/about",
        "headline": { "text": "About" },
        "subtext": { "text": "Who we are." },
        "body": { "text": "Replace this with your company story." }
      },
      {
        "slug": "contact",
        "title": "Contact",
        "href": "/contact",
        "headline": { "text": "Contact" },
        "subtext": { "text": "How to reach us." },
        "body": { "text": "Replace this with your contact channels." }
      }
    ],
    "sections": [
      {
        "id": "starter-nav",
        "type": "blocks",
        "enabled": true,
        "data": {
          "container": { "enabled": true, "className": "sticky top-0 z-50 py-0 sm:py-0 lg:py-0 border-b border-border/50 bg-background/95 backdrop-blur" },
          "innerWrapper": { "enabled": true, "className": "container mx-auto px-6 lg:px-8 py-0" },
          "blocks": [
            {
              "type": "headerBar",
              "enabled": true,
              "className": "h-16",
              "brandText": "Starter",
              "brandHref": "/",
              "links": [{ "text": "Features", "href": "#features" }, { "text": "About", "href": "/about" }, { "text": "Contact", "href": "/contact" }],
              "ctaText": "Get Started",
              "ctaHref": "#cta"
            }
          ]
        }
      },
      {
        "id": "starter-hero",
        "type": "blocks",
        "enabled": true,
        "data": {
          "container": { "enabled": true, "className": "bg-background py-20 sm:py-24 lg:py-28" },
          "innerWrapper": { "enabled": true, "className": "container mx-auto px-6 lg:px-8 space-y-8" },
          "blocks": [
            { "type": "heading", "enabled": true, "text": "A Simple Starter For New Projects", "level": 1, "align": "center", "size": "lg", "className": "text-5xl sm:text-6xl font-bold tracking-tight text-foreground" },
            { "type": "paragraph", "enabled": true, "text": "Edit JSON, change content, ship faster.", "align": "center", "size": "md", "className": "max-w-3xl text-muted-foreground" },
            { "type": "buttonRow", "enabled": true, "align": "center", "buttons": [{ "text": "Start", "href": "#cta", "variant": "primary" }, { "text": "About", "href": "/about", "variant": "secondary" }] }
          ]
        }
      },
      {
        "id": "starter-features",
        "type": "blocks",
        "enabled": true,
        "data": {
          "container": { "enabled": true, "id": "features", "className": "bg-muted/30 py-20 sm:py-24 lg:py-28" },
          "innerWrapper": { "enabled": true, "className": "container mx-auto px-6 lg:px-8 space-y-8" },
          "blocks": [
            { "type": "heading", "enabled": true, "text": "Built To Be Customized", "level": 2, "align": "center", "size": "md", "className": "text-4xl sm:text-5xl font-bold tracking-tight text-foreground" },
            {
              "type": "cards",
              "enabled": true,
              "size": "lg",
              "items": [
                { "title": "Block-Based", "text": "Compose pages with reusable primitives.", "href": "#", "linkText": "Learn more" },
                { "title": "Theme Aware", "text": "Swap brand look in one config.", "href": "#", "linkText": "Learn more" },
                { "title": "Editor Ready", "text": "Supports visual editing paths.", "href": "#", "linkText": "Learn more" }
              ]
            }
          ]
        }
      },
      {
        "id": "starter-cta",
        "type": "blocks",
        "enabled": true,
        "data": {
          "container": { "enabled": true, "id": "cta", "className": "bg-primary py-20 sm:py-24 lg:py-28 text-primary-foreground" },
          "innerWrapper": { "enabled": true, "className": "container mx-auto px-6 lg:px-8 space-y-6" },
          "blocks": [
            { "type": "heading", "enabled": true, "text": "Ready To Launch?", "level": 2, "align": "center", "size": "md", "className": "text-4xl sm:text-5xl font-bold tracking-tight" },
            { "type": "paragraph", "enabled": true, "text": "Replace content and publish quickly.", "align": "center", "size": "md", "className": "max-w-3xl text-primary-foreground/90" },
            { "type": "formRow", "enabled": true, "inputPlaceholder": "you@company.com", "buttonText": "Request Demo" }
          ]
        }
      },
      {
        "id": "starter-footer",
        "type": "blocks",
        "enabled": true,
        "data": {
          "container": { "enabled": true, "className": "bg-background border-t border-border py-14" },
          "innerWrapper": { "enabled": true, "className": "container mx-auto px-6 lg:px-8 space-y-6" },
          "blocks": [
            {
              "type": "split",
              "enabled": true,
              "ratio": "2:1",
              "leftBlocks": [{ "type": "paragraph", "enabled": true, "text": "Starter", "align": "left", "size": "sm", "className": "text-xs uppercase tracking-[0.14em] text-muted-foreground" }],
              "rightBlocks": [{ "type": "linkList", "enabled": true, "className": "justify-start lg:justify-end gap-x-5 text-sm", "links": [{ "text": "About", "href": "/about" }, { "text": "Contact", "href": "/contact" }, { "text": "Privacy", "href": "/privacy" }] }]
            }
          ]
        }
      }
    ]
  },
  "sections": {
    "dynamicPage": {
      "container": { "className": "bg-background" },
      "innerWrapper": { "className": "container mx-auto px-6 py-16 lg:px-8 lg:py-24" },
      "contentWrapper": { "className": "mx-auto max-w-4xl text-center" }
    }
  }
}
